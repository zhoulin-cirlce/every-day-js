<html lang="zh-CN">
	<head>
		<meta charset="utf-8" content="none">
	</head>
	<body>
		<script type="text/javascript">
			// 题目：计算给定数组 arr 中所有元素的总和  
			function sum(arr) {
			    var sum=0;
			 	for(var i=0;i<arr.length;i++){
			    	sum+=arr[i];
			 	}
			    return sum
			}
			console.log("sum=",sum([1,2,3,4]))

			//用reduce并归，参数1：函数（上一次结果，当前项），参数2：并归叠加项
			function _reduce(arr){
				s=arr.reduce(function(val1,val2){
					return val1+val2;
				},0);
				return s;
			}
		</script>
	</body>
</html>
