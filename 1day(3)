	<head>
		<meta charset="utf-8" content="none">
	</head>
	<body>
		<script type="text/javascript">
			// 题目：数组中remove()方法的实现			
function remove(arr, item) {
			    var arry=[]
				for(var i=0;i<arr.length;i++){
			        if(arr[i]!=item){
			            arry.push(arr[i])
			        }
			    }
			    return arry
			}
			console.log("remove=",remove([1,2,3,4,2],2))
		</script>
	</body>
</html>
