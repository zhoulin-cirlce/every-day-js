<html lang="zh-CN">
	<head>
		<meta charset="utf-8" content="none">
	</head>
	<body>
		<script type="text/javascript">
			// 题目：移除数组 arr 中的所有值与 item 相等的元素，直接在给定的 arr 数组上进行操作，并将结果返回  
			function removeWithoutCopy(arr, item) {
				for(var i=0;i<arr.length;i++){
			        if(arr[i]==item){
			        	console.log(arr[i])
			           arr.splice(i,1);
			           i--;
			           arr.length--;
			        }

			    }
			    return arr
			}
			console.log("removeWithoutCopy=",removeWithoutCopy([1,2,2,3,4,2,2],2))
		</script>
	</body>
</html>
